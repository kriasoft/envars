{
  "name": "envars",
  "version": "0.4.0",
  "description": "Securely store and load environment variables to/from .env files.",
  "keywords": [
    ".env",
    "config",
    "dotenv",
    "env",
    "environment",
    "settings",
    "typescript",
    "variables"
  ],
  "license": "MIT",
  "author": {
    "name": "Kriasoft",
    "email": "hello@kriasoft.com",
    "url": "https://kriasoft.com"
  },
  "repository": "kriasoft/envars",
  "contributors": [
    "Konstantin Tarkus <hello@tarkus.me> (https://tarkus.me/)"
  ],
  "funding": {
    "type": "patreon",
    "url": "https://patreon.com/koistya"
  },
  "bin": "./cli.js",
  "exports": {
    ".": "./lib/index.js",
    "./config": "./config.js",
    "./config.js": "./config.js",
    "./package.json": "./package.json"
  },
  "types": "lib/index.d.ts",
  "files": [
    "lib",
    "config.js"
  ],
  "scripts": {
    "lint": "eslint --report-unused-disable-directives .",
    "test": "jest --runInBand",
    "build": "rm -rf lib && babel --env-name production -x \".ts\" --out-dir ./lib \"src/**/*.ts\" && tsc",
    "envars": "node ./cli"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "dotenv": "^16.0.0",
    "make-dir": "^3.1.0",
    "meow": "^9.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.0",
    "@babel/core": "^7.17.2",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@types/jest": "^27.4.0",
    "@types/lodash": "^4.14.178",
    "@types/node": "^16.11.24",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "del": "^6.0.0",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "jest": "^27.5.1",
    "prettier": "^2.5.1",
    "typescript": "^4.5.5"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "envars": {
    "cwd": "./env"
  },
  "packageManager": "yarn@3.2.0-rc.14"
}
