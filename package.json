{
  "name": "envars",
  "version": "0.1.1",
  "description": "Securely store and load environment variables to/from .env files.",
  "keywords": [
    ".env",
    "config",
    "dotenv",
    "env",
    "environment",
    "settings",
    "typescript",
    "variables"
  ],
  "license": "MIT",
  "author": {
    "name": "Kriasoft",
    "email": "hello@kriasoft.com",
    "url": "https://kriasoft.com"
  },
  "repository": "kriasoft/envars",
  "contributors": [
    "Konstantin Tarkus <hello@tarkus.me> (https://tarkus.me/)"
  ],
  "funding": {
    "type": "patreon",
    "url": "https://patreon.com/koistya"
  },
  "bin": "./cli.js",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "lint": "eslint --report-unused-disable-directives .",
    "test": "jest",
    "build": "babel --env-name production -x \".ts\" --out-dir ./ \"src/**/*.ts\" && tsc && mv src/*.d.ts .",
    "envars": "node ./cli"
  },
  "dependencies": {
    "chalk": "^4.1.1",
    "dotenv": "^10.0.0",
    "make-dir": "^3.1.0",
    "meow": "^10.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.14.6",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-typescript": "^7.14.5",
    "@types/jest": "^26.0.24",
    "@types/lodash": "^4.14.171",
    "@types/node": "^16.3.3",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "@yarnpkg/sdks": "^2.4.1-rc.3",
    "del": "^6.0.0",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "jest": "^27.0.6",
    "prettier": "^2.3.2",
    "typescript": "^4.2.4"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "envars": {
    "cwd": "./env"
  }
}
